<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ctu.planitstudy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".feature.presentation.CashStudyApp"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.CashStudy">

        <activity android:name=".feature.presentation.terms_of_use.webview.TermsOfUse" />
        <activity android:name=".feature.presentation.edituser.EditUserScreen" />
        <activity android:name=".feature.presentation.splash.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.presentation.home.HomeScreen" />
        <activity
            android:name=".feature.presentation.sign_up.SignUpScreen"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".feature.presentation.terms_of_use.TermsOfUseAgreesScreen" />
        <activity android:name=".feature.presentation.login.LoginScreen" />
        <activity android:name=".MainActivity" />
        <activity android:name=".feature.presentation.dday.DdayScreen" />
        <activity android:name=".feature.presentation.study.StudyScreen" />
        <activity android:name=".feature.presentation.timer.TimerScreen" />
        <activity android:name=".feature.presentation.measurement.MeasurementScreen" />
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Redirect URI: "kakaoa76352f6670e85030076b792cbff190e://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="kakaoa76352f6670e85030076b792cbff190e" />
            </intent-filter>
        </activity>
    </application>

</manifest>