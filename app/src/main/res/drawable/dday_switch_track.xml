<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="80dp" android:height="20dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="5dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="15dp" />
                    <size android:width="80dp" android:height="10dp" />
                    <solid android:color="@color/item_guide_stroke" /> <!-- custom color - track off -->
                    <stroke android:width="2dp" android:color="@color/item_guide_stroke" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="80dp" android:height="20dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="5dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="15dp" />
                    <size android:width="80dp" android:height="10dp" />
                    <solid android:color="@color/sub_color2" />
                    <stroke android:width="2dp" android:color="@color/sub_color2" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>