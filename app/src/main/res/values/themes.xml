<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CashStudy" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue_back_ground</item>
        <item name="colorPrimaryVariant">@color/navy_blue_back_ground</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy_blue_item_box</item>
        <item name="colorSecondaryVariant">@color/navy_blue_item_box</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/navy_blue_back_ground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SettingContextSwitch" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@color/text_color</item>
        <item name="android:track">@drawable/dday_switch_track</item>
        <item name="android:switchMinWidth">10dp</item> <!-- v19 setOnSwitchSize -->
    </style>

</resources>