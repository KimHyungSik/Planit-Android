<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <FrameLayout
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/navy_blue_back_ground"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:text="디데이를 삭제하시겠습니까?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:lineSpacingExtra="9sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="44dp"
                    android:layout_marginHorizontal="32dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="20dp"
                    >
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/d_day_delete_check_cancel"
                        android:layout_width="128dp"
                        android:layout_height="46dp"
                        app:cardCornerRadius="23dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#888888"
                        app:cardBackgroundColor="@color/navy_blue_back_ground"
                        android:clickable="true"
                        android:layout_marginEnd="8dp"
                        >
                        <TextView
                            android:text="취소"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            />
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/d_day_delete_check_confirmed"
                        android:layout_width="128dp"
                        android:layout_height="46dp"
                        app:cardCornerRadius="23dp"
                        app:cardBackgroundColor="@color/text_color"
                        android:clickable="true"
                        >
                        <TextView
                            android:text="삭제"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="#050626"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>