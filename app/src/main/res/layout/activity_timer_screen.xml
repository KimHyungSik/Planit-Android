<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.ctu.planitstudy.feature.presentation.timer.TimerViewModel" />
        <variable
            name="activity"
            type="com.ctu.planitstudy.feature.presentation.timer.TimerScreen" />
        <import type="com.ctu.planitstudy.feature.presentation.timer.TimerCycle"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navy_blue_back_ground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/timer_back_screen_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/ic_baseline_arrow_back"
                android:onClick="@{() -> viewmodel.changeTimerCycle(TimerCycle.TimePause)}"
                />

            <TextView
                android:id="@+id/timer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="12sp"
                android:text="@{activity.study.title}"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <me.tankery.lib.circularseekbar.CircularSeekBar
                    android:id="@+id/timer_circular_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cs_circle_color="@color/module_color"
                    app:cs_circle_fill="#04041d"
                    app:cs_circle_progress_color="@color/sub_color"
                    app:cs_circle_stroke_width="10dp"
                    app:cs_disable_progress_glow="true"
                    app:cs_pointer_color="@color/sub_color"
                    app:cs_pointer_stroke_width="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                    <TextView
                        android:id="@+id/timer_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="9sp"
                        android:text="@{viewmodel.timerState.timeString}"
                        android:textColor="@color/text_color"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/timer_time_sub_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="집중하면 1시간마다\n플래닛 패스 획득!"
                        android:lineSpacingExtra="4sp"
                        android:textColor="#4794ff"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/timer_time_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/navy_blue_item_box"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="휴식횟수"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/timer_break_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{viewmodel.timerState.breakTime + `회`}"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/navy_blue_item_box"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_reward_start_round" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/timer_star_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="24dp"
                        android:text="@{`+ ` + viewmodel.timerState.star}"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/navy_blue_item_box"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_bonus_ticket" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/timer_ticket_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="24dp"
                        android:text="@{`+ ` + viewmodel.timerState.ticket}"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timer_stop_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/sub_color2"
            app:cardCornerRadius="40dp"
            android:onClick="@{()->viewmodel.changeTimerCycle(TimerCycle.TimePause)}"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/timer_confirmed_stop_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="타이머 멈추기"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timer_start_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/navy_blue_back_ground"
            app:cardCornerRadius="40dp"
            app:strokeColor="@color/sub_color"
            app:strokeWidth="1dp"
            android:onClick="@{()->viewmodel.changeTimerCycle(TimerCycle.TimeFlow)}"
            >

            <TextView
                android:id="@+id/timer_confirmed_star_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="타이머 시작하기"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8059978824937636/8968387477">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</layout>