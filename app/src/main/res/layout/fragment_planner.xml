<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.presentation.home.fragment.analysis.AnalysisFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/planner_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="58dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/planner_radio_planner_button"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:button="@null"
                android:text="플래너"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/planner_radio_d_day_button"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:button="@null"
                android:text="디데이"
                android:textColor="@color/enabled_text_color"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RadioGroup>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/d_day_added_btn"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/item_guide_stroke"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/text_color"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:src="@drawable/ic_plus"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    />
                <TextView
                    android:text="디데이추가"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/planner_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>