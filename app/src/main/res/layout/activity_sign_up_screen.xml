<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".feature.presentation.sign_up.SignUpScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navy_blue_back_ground"
        android:orientation="vertical"
        >

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/sign_up_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:dotsColor="@color/button_disabled"
            app:dotsSize="9dp"
            app:dotsWidthFactor="1"
            app:selectedDotColor="@color/text_color"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/sign_up_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@id/sign_up_btn"
            app:layout_constraintTop_toBottomOf="@id/sign_up_indicator" />

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/button_disabled"
            app:cardCornerRadius="40dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="363dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="다음"
                android:textColor="@color/navy_blue_back_ground"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
