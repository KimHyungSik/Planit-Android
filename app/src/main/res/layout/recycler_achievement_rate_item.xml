<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/achievement_rate_top_line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/sub_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/achievement_rate_dot_img"
        app:layout_constraintLeft_toLeftOf="@id/achievement_rate_dot_img"
        app:layout_constraintRight_toRightOf="@id/achievement_rate_dot_img"
        />

    <ImageView
        android:id="@+id/achievement_rate_dot_img"
        android:src="@drawable/achievement_rate_dot"
        android:layout_width="9dp"
        android:layout_height="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        />

    <View
        android:id="@+id/achievement_rate_bottom_line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/sub_color"
        app:layout_constraintTop_toBottomOf="@id/achievement_rate_dot_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/achievement_rate_dot_img"
        app:layout_constraintRight_toRightOf="@id/achievement_rate_dot_img"
        />

    <TextView
        android:id="@+id/achievement_rate_title_text"
        android:text="제목"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/achievement_rate_dot_img"
        app:layout_constraintTop_toTopOf="@id/achievement_rate_dot_img"
        app:layout_constraintBottom_toBottomOf="@id/achievement_rate_dot_img"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/achievement_rate_time_text"
        android:text="0시간00분00초"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/achievement_rate_title_text"
        app:layout_constraintLeft_toRightOf="@id/achievement_rate_dot_img"
        android:layout_marginStart="16dp"
        android:textSize="14dp"
        android:textColor="@color/guide_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>