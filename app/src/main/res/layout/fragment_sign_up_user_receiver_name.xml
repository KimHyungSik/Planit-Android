<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sign_up_receiver_name_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="추천인을\n입력해주세요"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:text="추천인 닉네임을 입력하면\n300캐시를 추가로 드립니다"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#d9d9d9"
        app:layout_constraintTop_toBottomOf="@id/sign_up_receiver_name_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_up_receiver_name_card_view"
        app:layout_constraintBottom_toTopOf="@id/sign_up_receiver_name_error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navy_blue_item_box"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="@color/navy_blue_item_box"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="76dp">
        <EditText
            android:id="@+id/sign_up_receiver_name_edit_text"
            android:hint="추천인 닉네임을 입력하세요"
            android:textColorHint="@color/guide_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="26dp"
            android:background="@null"
            android:inputType="text"
            android:maxLength="8"
            android:textCursorDrawable="@drawable/white_cursor"
            />

        <ImageView
            android:id="@+id/sign_up_receiver_name_error_icon"
            android:src="@drawable/blue_error_icon"
            android:visibility="visible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sign_up_receiver_name_error_text"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="닉네임 형식이 올바르지 않습니다.."
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#1b7bff"
        android:lineSpacingExtra="10sp"
        android:layout_marginStart="26dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>