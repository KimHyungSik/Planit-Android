<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.ctu.planitstudy.feature.presentation.home.fragment.planner.fragments.PlannerPlannerFragment" />

        <import type="com.ctu.planitstudy.feature.presentation.util.Screens" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/planner_planner_calendar_month_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/module_color"
                android:gravity="start"
                android:paddingStart="32dp"
                android:paddingTop="20dp"
                android:textColor="@color/sub_color2"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/planner_planner_custom_calendar_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/module_color"
                app:layout_constraintTop_toBottomOf="@id/planner_planner_calendar_month_text">

                <com.kizitonwose.calendarview.CalendarView
                    android:id="@+id/planner_planner_custom_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:background="@color/module_color"
                    android:clickable="true"
                    app:cv_dayViewResource="@layout/calendar_layout"
                    app:cv_inDateStyle="allMonths"
                    app:cv_maxRowCount="1"
                    app:cv_monthHeaderResource="@layout/calendar_header"
                    app:cv_orientation="horizontal"
                    app:cv_outDateStyle="endOfRow"
                    app:cv_scrollMode="paged" />
            </com.google.android.material.card.MaterialCardView>

            <ImageButton
                android:id="@+id/planner_planner_calendar_arrow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bottom_radius_item"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintTop_toBottomOf="@id/planner_planner_custom_calendar_column" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/planner_planner_study_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/planner_planner_calendar_arrow" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/study_fragment_empty_img"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="32dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{()->activity.addStudyScreen()}"
                android:visibility="gone"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/planner_planner_calendar_arrow"
                app:strokeColor="@color/item_guide_stroke"
                app:strokeWidth="1dp">

                <include layout="@layout/components_planner_study_empty" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>