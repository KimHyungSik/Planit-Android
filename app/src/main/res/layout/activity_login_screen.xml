<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <variable
            name="viewmodel"
            type="com.ctu.cashstudy.feature.presentation.login.LoginViewModel"
            />
        <variable
            name="kakaoLogin"
            type="com.ctu.cashstudy.feature.data.data_source.user.OauthType.KakaoOauth" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.presentation.login.LoginScreen"
        android:background="@color/navy_blue_back_ground"
        >

        <TextView
            android:id="@+id/login_screen_sub_title"
            android:text="돈버는 공부타이머"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_marginTop="204dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/login_screen_main_title"
            android:text="플래닛"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toBottomOf="@id/login_screen_sub_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/kako_login_btn"
            android:src="@drawable/kakao_login_large_wide"
            android:background="@color/navy_blue_back_ground"
            android:onClick="@{()->viewmodel.login(context)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:paddingHorizontal="32dp"
            android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>