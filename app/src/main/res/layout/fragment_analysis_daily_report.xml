<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="activity"
            type="com.ctu.planitstudy.feature.presentation.home.fragment.analysis.AnalysisFragment" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".feature.presentation.home.fragment.analysis.AnalysisFragment">

            <TextView
                android:id="@+id/analysis_fragment_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="58dp"
                android:text="분석"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/analysis_fragment_daily_toggle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/sub_color"
                app:cardCornerRadius="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/analysis_fragment_analysis_toggle"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_title_text">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="12dp"
                    android:gravity="center"
                    android:text="데일리 리포트"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/analysis_fragment_analysis_toggle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                app:cardBackgroundColor="@color/module_color"
                app:cardCornerRadius="8dp"
                app:layout_constraintLeft_toRightOf="@id/analysis_fragment_daily_toggle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_title_text">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="12dp"
                    android:gravity="center"
                    android:text="통계"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/analysis_fragment_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp"
                android:text="@{activity.currentDateText}"
                android:textColor="@color/sub_color"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_analysis_toggle" />

            <ImageView
                android:id="@+id/analysis_fragment_date_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_blue_bottom_arrow"
                app:layout_constraintBottom_toBottomOf="@id/analysis_fragment_date_text"
                app:layout_constraintLeft_toRightOf="@id/analysis_fragment_date_text"
                app:layout_constraintTop_toTopOf="@id/analysis_fragment_date_text" />

            <TextView
                android:id="@+id/analysis_fragment_total_study_time_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="6dp"
                android:text="@{activity.totalTime}"
                android:textColor="@color/text_color"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_date_text" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/achievement_rate_empty_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_total_study_time_title"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#171853"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="60dp"
                android:visibility="gone"
                app:cardElevation="0dp"
                >
                <include
                    layout="@layout/components_analysis_study_empty"
                    />
            </com.google.android.material.card.MaterialCardView>



            <TextView
                android:id="@+id/analysis_fragment_most_focused_study_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp"
                android:text="가장 집중한 공부"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_total_study_time_title" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/analysis_fragment_most_focused_study_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/module_color"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_most_focused_study_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/analysis_fragment_most_focused_study"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="32dp"
                        android:text="@{activity.mostStudyTitle}"
                        android:textColor="@color/text_color"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/analysis_fragment_most_focused_study_time"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/analysis_fragment_most_focused_study_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="32dp"
                        android:text="@{activity.mostStudyTime}"
                        android:textColor="@color/guide_text"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analysis_fragment_most_focused_study" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/analysis_fragment_study_time_line_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp"
                android:text="공부 타임라인"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_most_focused_study_column" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/analysis_fragment_study_time_line_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/module_color"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_study_time_line_title">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/analysis_fragment_study_time_line_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintHeight_max="300dp"
                    />

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/analysis_fragment_achievement_rate_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="62dp"
                android:src="@drawable/ic_planner_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_study_time_line_column" />

            <TextView
                android:id="@+id/analysis_fragment_achievement_rate_check_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="플래너 공부 달성률"
                app:layout_constraintBottom_toBottomOf="@id/analysis_fragment_achievement_rate_check_img"
                app:layout_constraintLeft_toRightOf="@id/analysis_fragment_achievement_rate_check_img"
                app:layout_constraintTop_toTopOf="@id/analysis_fragment_achievement_rate_check_img" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/analysis_fragment_achievement_rate_check_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="@color/module_color"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_achievement_rate_check_img">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/analysis_fragment_study_time_line_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="32dp"
                        android:progress="30"
                        app:indicatorColor="@color/sub_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:trackColor="@color/navy_blue_back_ground"
                        app:trackCornerRadius="10dp"
                        app:trackThickness="10dp" />

                    <TextView
                        android:id="@+id/analysis_fragment_study_time_line_total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp"
                        android:text="완료 개수"
                        android:textColor="@color/guide_text"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analysis_fragment_study_time_line_progress" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp"
                        android:text="@{activity.studyCounter}"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/analysis_fragment_study_time_line_total_text"
                        app:layout_constraintTop_toBottomOf="@id/analysis_fragment_study_time_line_progress" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="24dp"
                        android:text="@{activity.studyIsDonePercent}"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analysis_fragment_study_time_line_progress" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/analysis_fragment_achievement_rate_check_column" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>