<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="생년월일을\n입력해주세요"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_up_date_of_birth_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navy_blue_item_box"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="@color/navy_blue_item_box"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/sign_up_skip_enter_user"
        android:layout_marginBottom="20dp"
        >

        <EditText
            android:id="@+id/sign_up_date_of_birth_edit_text"
            android:hint="YYYY-MM-DD"
            android:textColorHint="@color/guide_text"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginHorizontal="26dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/white_cursor"
            android:inputType="number"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sign_up_skip_enter_user"
        android:text="다음에 할게요"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#252641"
        android:textSize="16sp"
        android:background="@drawable/skip_text_lines"
        />

</androidx.constraintlayout.widget.ConstraintLayout>