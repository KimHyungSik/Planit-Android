<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue_back_ground"
    tools:context=".feature.presentation.terms_of_use.TermsOfUseScreenAgrees">

    <TextView
        android:id="@+id/terms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:text="이용약관을\n확인해주세"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/terms_all_check_box_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="104dp"
        app:cardBackgroundColor="@color/navy_blue_item_box"
        app:cardCornerRadius="11dp"
        app:layout_constraintTop_toBottomOf="@id/terms_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginVertical="26dp"
            android:orientation="horizontal"
            android:paddingHorizontal="26dp">

            <CheckBox
                android:id="@+id/terms_of_use_all_check_box"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/check_box"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="전체 동의합니다."
                android:textColor="@color/text_color"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/navy_blue_item_box"
        app:cardCornerRadius="11dp"
        app:layout_constraintTop_toBottomOf="@id/terms_all_check_box_column">

        <include
            android:id="@+id/terms_of_use_items"
            layout="@layout/terms_of_use_items"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/terms_of_use_check_btn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="@color/button_disabled"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="363dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/navy_blue_back_ground"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>