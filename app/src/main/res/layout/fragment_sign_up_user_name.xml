<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/sign_up_receiver_name_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="이름과 사용하실\n닉네임을 입력해주세요"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:text="추천인 닉네임을 입력하면\n300캐시를 추가로 드립니다"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#d9d9d9"
        app:layout_constraintTop_toBottomOf="@id/sign_up_receiver_name_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_up_name_card_view"
        app:layout_constraintBottom_toTopOf="@id/sign_up_nickname_card_view"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="@color/navy_blue_item_box"
        >

        <EditText
            android:id="@+id/sign_up_name_edit_text"
            android:hint="이름을 입력하세요"
            android:textColorHint="@color/guide_text"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginHorizontal="26dp"
            android:background="@null"
            android:inputType="text"
            android:maxLength="8"
            android:textCursorDrawable="@drawable/white_cursor"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_up_nickname_card_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navy_blue_item_box"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="@color/navy_blue_item_box"
        >

        <EditText
            android:id="@+id/sign_up_nickname_edit_text"
            android:hint="닉네임을 입력하세요"
            android:textColorHint="@color/guide_text"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginHorizontal="26dp"
            android:background="@null"
            android:inputType="text"
            android:maxLength="8"
            android:textCursorDrawable="@drawable/white_cursor"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>